/* pages/my/my.wxss */

page {
  height: 100%;
}

.my-container {
  height: 100%;
}

.my-info {
  height: 320rpx;
  background: linear-gradient(#f53f4a, #fb4583);
}

.my-tools {
  height: 100rpx;
  background: #f1f1f1 url("https://www.fuhushi.com/source/static/images/arc.jpg") no-repeat;
  background-size: 100%;
}

.my-classic {
  height: 100%;
  background: #f1f1f1;
}

/* 头像 */

.my-logo {
  text-align: center;
}

.my-logo image {
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}

.my-name {
  text-align: center;
  color: #fff;
  font-size: 25rpx;
}

/* 完善资料 订单详情 */

.my-items {
  margin-top: 40rpx;
  padding: 0 33rpx;
  display: flex;
}

.my-item {
  width: 20%;
  text-align: center;
}

.my-item image {
  width: 45rpx;
  height: 45rpx;
}

.my-item .my-item-text {
  font-size: 22rpx;
  color: #fff;
}

/* 客服 */

.my-tools-box {
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 0 15rpx;
  width: 440rpx;
  height: 96rpx;
  /* line-height: 48rpx; */
  background: #fff;
  border-radius: 10rpx;
}

.my-tools-box>view {
  width: 33.33%;
  text-align: center;
}

.my-box-ico {
  padding-top: 12rpx;
  margin: 0;
}

.my-box-ico image {
  width: 42rpx;
  height: 42rpx;
}

.my-box-text {
  margin-top: -10rpx;
  font-size: 22rpx;
  color: #666;
}

/* 精品推荐 */

.my-classic-title {
  width: 160rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
  padding-top: 53rpx;
  padding-bottom: 20rpx;
}

.my-classic-title image {
  width: 38rpx;
  height: 30rpx;
}

.my-classic-title view:nth-child(2) {
  color: #f7415e; 
  font-size: 26rpx;
  margin-left: 6rpx;
}

/* 畅销书 */
.top3 .top3-hotsale {
  background: #fbbebd;
}

.top3-item-box {
  padding: 26rpx 24rpx;
}

.top3-hotsale-title {
  display: flex;
  font-size: 24rpx;
  color: #fff;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.top3-hotsale-body {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 18rpx;

}

.top3-hotsale-body-item {
  position: relative;
  width: 32%;
  height: 345rpx;
  background: #fff;
  border-radius: 5px;
  margin-bottom: 18rpx;
}

.top3-item-img {
  text-align: center;
}

.top3-item-img image {
  width: 195rpx;
  height: 194rpx;
  margin-top: 17rpx;
}

.top3-item-title {
  margin: 0 auto;
  margin-top: 10rpx;
  width: 195rpx;
  height: 64rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #484848;
  text-align: center;
}

.top3-item-price {
  font-size: 24rpx;
  color: #e12616;
  text-align: center;
}

.top3-item-price .price_int {
  font-size: 32rpx;
}
.my-box-kf{
  position: relative;
}
.kf{
  position: absolute;
  width: 70rpx;
  height: 45rpx;
  background: transparent;
}

.kf::after{
  border: none;
}