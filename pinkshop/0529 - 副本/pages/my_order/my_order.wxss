/* pages/my_order/my_order.wxss */

page {
  background: #f1f1f1;
}

/******************************摘自list-moview  ***********************************/

/******************************列表  ***********************************/

.list-item {
  border-bottom: none;
  padding: 40rpx;
  display: flex;
  margin-bottom: 40rpx;
}

.list-item-left image {
  width: 180rpx;
  height: 240rpx;
}

.list-item-right {
  margin-left: 40rpx;
  color: #666;
  width: 500rpx;
}

.title {
  color: #000;
  font-size: 28rpx;
  height: 80rpx;
  overflow: hidden;
  font-weight: bold;
}

.author, .publicer, .public-date, .descript {
  font-size: 23rpx;
  color: #666;
  margin: 7rpx 0;
}

/* .descript {
  font-size: 18rpx;
} */

.price {
  color: #e43728;
  font-size: 24rpx;
  padding-bottom: 5rpx;
}

.price text {
  font-size: 30rpx;
}

.recommend {
  display: flex;
  align-items: center;
  height: 23rpx;
}

.stars image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 5rpx;
}

.recommend text {
  font-size: 20rpx;
  color: #a7a7a7;
  margin-top: 5rpx;
  margin-left: 10rpx;
}

.movie-list {
  border-top: #e4e4e4 1px solid;
}

.dp {
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
  height: 61rpx;
  border-top: #999 1px dotted;
  border-bottom: #999 1px dotted;
  margin: 10rpx 0;
  line-height: 61rpx;
  color: #5d5d5d;
  font-size: 21rpx;
}

/* 评论 */

.pl-info {
  display: flex;
  height: 33rpx;
  justify-content: space-between;
  line-height: 33rpx;
  padding-bottom: 10rpx;
  padding-right: 10rpx;
}

.edit-pl {
  width: 109rpx;
  height: 32rpx;
  background: #8067ab;
  border-radius: 20rpx;
  font-size: 18rpx;
  color: #fff;
  text-align: center;
  line-height: 32rpx;
}
.pl-content{
  color:#A7A7A7;
  font-size: 20rpx;
}

.post-recommend{
  color:#fff;
  width: 109rpx;
  height: 32rpx;
  font-size: 18rpx;
  background: #FF0000;
  border-radius: 20rpx;
  line-height: 32rpx;
  text-align: center;
  margin-top: 20rpx;
}